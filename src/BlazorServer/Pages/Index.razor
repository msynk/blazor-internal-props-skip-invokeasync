@code {
    [Inject] private IJSRuntime js { get; set; } = default!;

    private ElementReference div;
    private Bounds2 bounds = new();

    protected async Task GetBounds()
    {
        var interop = new ExampleJsInterop(js);
        bounds = await js.InvokeAsync<Bounds2>("getBoundingClientRect", div);
    }
}